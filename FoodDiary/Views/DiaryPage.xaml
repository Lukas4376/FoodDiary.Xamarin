                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <Label Text="{Binding Summary}" BackgroundColor="{StaticResource Primary}" FontSize="Medium" TextColor="White" FontAttributes="Bold"></Label>
    </StackLayout>
</ContentPage>